{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "comments": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "comment": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "text"
                  ]
                }
              ]
            },
            "comment_text": {
              "type": "string"
            },
            "user": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                },
                "initials": {
                  "type": "string"
                },
                "profilePicture": {
                  "type": "null"
                }
              },
              "required": [
                "id",
                "username",
                "email",
                "color",
                "initials",
                "profilePicture"
              ]
            },
            "reactions": {
              "type": "array",
              "items": {}
            },
            "date": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "comment",
            "comment_text",
            "user",
            "reactions",
            "date"
          ]
        }
      ]
    }
  },
  "required": [
    "comments"
  ]
}